.PHONY: all clean

CFLAGS = -O3 -g -march=native -Wall

all: libsphericart.so example

clean:
	rm -rf libsphericart.so example

libsphericart.so: sphericart.c sphericart.h
	icc --shared $(CFLAGS) sphericart.c -o libsphericart.so -lm -fpic -qmkl -qopenmp

example: libsphericart.so example.c
	icc -o example $(CFLAGS) -O3 example.c -lsphericart -L .
